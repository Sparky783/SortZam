<Page x:Class="Sortzam.Ihm.Views.MusicListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sortzam.Ihm.Views"
      xmlns:vm="clr-namespace:Sortzam.Ihm.ViewModels"
      xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MusicListPage">

    <Page.Resources>
        <vm:MusicListPageViewModel x:Key="ViewModel" />

        <Style x:Key="SelectionButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Padding" Value="10,0" />
        </Style>
    </Page.Resources>

    <Grid DataContext="{StaticResource ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Style="{StaticResource SelectionButton}" Command="{Binding SelectAllCommand}">
                    Tout sélectionner
                </Button>
                <Button Style="{StaticResource SelectionButton}" Command="{Binding DeselectAllCommand}">
                    Désélectionner
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Margin="0,0,15,0" VerticalAlignment="Center" Text="Dossier: ..." />
                <Button Padding="5" Margin="0,0,15,0" Background="#FF142C61" BorderBrush="{x:Null}" Command="{Binding BrowseCommand}">
                    <mdt:PackIcon Kind="Folder" Foreground="White" />
                </Button>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="projectorList" Grid.Row="1" AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False"
                  ItemsSource="{Binding Musics}" HeadersVisibility="Column"
                  SelectionChanged="projectorList_SelectionChanged">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Width="auto" CanUserResize="False" Binding="{Binding IsChecked, Mode=TwoWay}" />
                <DataGridTextColumn Header="Titre" Binding="{Binding FileName}" Width="auto" IsReadOnly="True" />
                <DataGridTextColumn Header="Chemin" Binding="{Binding Path}" Width="auto" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
